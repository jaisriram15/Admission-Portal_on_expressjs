<%- include('./header.ejs') %>

    <div class="container " style="margin-top: 7rem;">

        
                <div class="row mb-5">
                    <div class="col-md-3 "></div>
                    <div class="col-md-6 ">

                        <% if(message.length> 0){ %>
                            <div class="alert alert-success">
                                <%= message %>
                            </div>
                            <% } %>
                        <div class="card px-5  text-center bg-light">
                            <h2 class="text-uppercase">Profile Update</h2>

                            <div class="py-3 ">
                                <img class="profile-img " src="<%= i.url %>" alt="">
                            </div>
                            <h2>Name: <%= n %>
                            </h2>
                            <h2>Email: <%= e %>
                            </h2>


                            <div class="mb-3 ">
                                <button type="submit" class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#updateProfile">Update
                                    Profile</button>


                                <button type="submit" class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#changePassword">Change Password</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 "></div>
                </div>
    </div>
    <!--profile update model -->
    <div class="modal fade" id="updateProfile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">

                    <h1 class="modal-title fs-5" id="exampleModalLabel">Update Profile

                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close">&times;</button>

                </div>
                <div class="modal-body">
                    <form action="/updateProfile" method="post" enctype="multipart/form-data">
                        <div class="mb-1">

                            <label for="">Name</label>
                            <input type="text" name="name" class="form-control" value="<%= n %>" required>
                        </div>
                        <div class="mb-1">
                            <label for="">Email</label>
                            <input type="email" name="email" class="form-control" value="<%= e %>" required>
                        </div>
                        <div class="mb-1">
                            <label for="">Image</label>
                            <input type="file" name="image" class="form-control">
                            <img src="<%= i.url %>" alt="mdo" width="50px" height="50px" class="rounded-circle mt-1">

                        </div>
                        <div class=" text-center">
                            <button type="submit" class="btn btn-primary ">Update Profile</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
        <!--profile update model END -->

        <!--Update Password  Modal -->
    <div class="modal fade" id="changePassword" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Change Password</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="color: white;"  >&times;</button>
                </div>
                <div class="modal-body">
                    <!--Form Start-->
                    <form action="/changePassword" method="post">
                        <div class=" input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Old Password</span>
                            <input type="password" name="oldpassword" class="form-control" required>
                        </div>

                        <div class=" input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">New Password</span>
                            <input type="password" name="newpassword" class="form-control" placeholder="abc@gmail.com" required>
                        </div>

                        <div class=" input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Confirm Password</span>
                            <input type="password" name="confirmpassword" class="form-control" required>
                        </div>

                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn text-light ">Update Password</button>
                        </div>
                        
                    </form>
                    <!--Form Start End-->

                </div>

            </div>
        </div>
    </div>
    <!--Update Password  Modal End-->


    <%- include('./footer.ejs') %>