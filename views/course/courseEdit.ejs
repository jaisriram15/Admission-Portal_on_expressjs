<%- include('../header.ejs') %>
<div class="container">

    <h1 style="margin-top: 80px;text-align: center;">Course Edit</h1>
    
     <!--Form Start-->
     <form action="/courseUpdate/<%= courseedit.id %>" method="post">


        <div class=" input-group mb-2">
            <span class="input-group-text" id="inputGroup-sizing-default">User Name</span>
            <input type="text " name="name" value="<%= courseedit.name %>" class="form-control">
        </div>

        <div class=" input-group mb-2">
            <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
            <input type="email " name="email" value="<%= courseedit.email %>" class="form-control" placeholder="abc@gmail.com">
        </div>

        <div class=" input-group mb-2">
            <span class="input-group-text" id="inputGroup-sizing-default">Mobile Number</span>
            <input type="tel " name="mobileNo" value="<%= courseedit.number %>" class="form-control">
        </div>

        <div class=" input-group mb-2">
            <span class="input-group-text" id="inputGroup-sizing-default">DOB</span>
            <input type="date" name="dob" value="<%= courseedit.dob %>" class="form-control">
        </div>

        <div class="mb-2">
            <label for="" class="mb-2">Gender</label>
            <br>
            <input <%= courseedit.gender=='male'?'checked':'' %> type="radio" name="gender" value="male">&nbsp;Male
            <input <%= courseedit.gender=='female'?'checked':'' %> type="radio" name="gender" value="female">&nbsp;Female
            <br>


        </div>

        <div class=" input-group mb-2">
            <span class="input-group-text" id="inputGroup-sizing-default">Address</span>
            <textarea class="form-control" name="address" id="" cols="1" rows="5"><%= courseedit.address %></textarea>
            
        </div>



        <div class="input-group mb-2">

            <span class="input-group-text" id="inputGroup-sizing-default">Colleges</span>
            <select class="form-select" name="college" id="">
                <option value="" selected="">Choose..</option>
                <option <%= courseedit.college=='IIT Kharagpur'?'selected':'' %> value="IIT Kharagpur">IIT Kharagpur</option>
                <option <%= courseedit.college=='IIT Mumbai'?'selected':'' %> value="IIT Mumbai">IIT Mumbai</option>
                <option <%= courseedit.college=='IIT Delhi'?'selected':'' %> value="IIT Delhi">IIT Delhi</option>

            </select>

        </div>

        <div class="input-group mb-2">

            <span class="input-group-text" id="inputGroup-sizing-default">Course</span>
            <select class="form-select" name="course" id="">
                <option value="" selected="">Choose..</option>
                <option <%= courseedit.course=='B.Tech'?'selected':'' %> value="B.Tech">B.Tech</option>


            </select>

        </div>

        <div class="input-group mb-2">

            <span class="input-group-text" id="inputGroup-sizing-default">Branch</span>
            <select class="form-select" name="branch" id="">
                <option value="" selected="">Choose..</option>
                <option <%= courseedit.branch=='CS'?'selected':'' %> value="CS">CS</option>
                <option <%= courseedit.branch=='IT'?'selected':'' %> value="IT">IT </option>
                <option <%= courseedit.branch=='EEE'?'selected':'' %> value="EEE">EEE </option>
                <option <%= courseedit.branch=='ME'?'selected':'' %> value="ME">ME </option>

            </select>

        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn text-light ">Update</button>
        </div>
        

    </form>
    <!--Form Start End-->

</div>



<%- include('../footer.ejs') %>